<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivSettingsBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/starysky_anim"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        tools:ignore="MissingConstraints"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="125dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/asset_button_save1"
        tools:ignore="MissingConstraints" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_width="125dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/asset_button_cancel1"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/ivSettingsText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:src="@drawable/asset_text_settings"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivHighScoreText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/asset_text_highscore"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/tvHighScore"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#000000"
        android:textSize="30sp"
        android:text="0"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="160dp"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivDifficultyText"
        android:layout_width="180dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/asset_text_difficulty"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivEasyText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/asset_text_easy"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivMediumText"
        android:layout_width="110dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:src="@drawable/asset_text_medium"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivHardText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/asset_text_hard"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivSoundText"
        android:layout_width="100dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/asset_text_sound"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>
    <ImageView
        android:id="@+id/ivSoundOff"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/asset_sound_off"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/ivSoundOn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="150dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/asset_sound_on"
        android:contentDescription="@string/app_name"
        tools:ignore="MissingConstraints"/>

    <com.google.android.gms.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/avSettingsBottom"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8785133418509207/9991378156"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>